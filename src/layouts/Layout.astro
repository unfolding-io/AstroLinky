---
import { ViewTransitions } from "astro:transitions";
import { Icon } from "astro-icon/components";
import "@/styles/globals.css";
export const prerender = false;
interface Props {
  title: string;
  isAdmin?: boolean;
  description?: string;
}
const SHOW_GITHUB = import.meta.env.SHOW_GITHUB == 1 ? true : false;

const {
  title = "AstroLinky, The Astro-Powered URL Shortener & QR Code Generator",
  description = "Create short, easy-to-share URLs with just a few clicks. Powered by the speed and efficiency of Astro, you can provide lightning-fast redirects, custom URL slugs, and the ability to generate QR codes in seconds from your own domain.",
  isAdmin = false,
} = Astro.props;

const ogImage = new URL("/AstroLinky.png", Astro.url);
